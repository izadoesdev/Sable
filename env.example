# Sable Environment Configuration

# Authentication
BETTER_AUTH_SECRET=your-secret-key-here-generate-a-secure-random-string
BETTER_AUTH_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/sable

# Encryption (auto-generated on first run - leave empty initially)
SABLE_SERVER_KEYPAIR=

# Optional: For production deployments
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Optional: For invite-only mode
SABLE_INVITE_ONLY=true
SABLE_ADMIN_EMAIL=admin@yourdomain.com

# Optional: Rate limiting
SABLE_RATE_LIMIT_ENABLED=true
SABLE_MAX_POSTS_PER_HOUR=10
SABLE_MAX_FOLLOWS_PER_DAY=20 